
@戦闘初期ステータス設定_XXXX(キャラ番号)
#DIM キャラ番号

;ここは弄らないこと
基礎BATTLE_STATE:キャラ番号:ステータスタイプ保存 = -1
基礎BATTLE_STATE:キャラ番号:Lv = 1
;ここまで弄らないこと

;初期ステータスを登録
;ステータスのバランスは「@初期ステータス設定_テンプレート適用」を参考
基礎BATTLE_STATE:キャラ番号:最大ＨＰ = 
基礎BATTLE_STATE:キャラ番号:最大ＭＰ = 
基礎BATTLE_STATE:キャラ番号:攻撃力 = 
基礎BATTLE_STATE:キャラ番号:防御力 = 
基礎BATTLE_STATE:キャラ番号:回復力 = 
基礎BATTLE_STATE:キャラ番号:行動速度 = 
基礎BATTLE_STATE:キャラ番号:DA率 = 
基礎BATTLE_STATE:キャラ番号:TA率 = 
基礎BATTLE_STATE:キャラ番号:ゲージ上昇効率 = 100
基礎BATTLE_STATE:キャラ番号:ゲージ最大値 = 100
基礎BATTLE_STATE:キャラ番号:命中率 = 
基礎BATTLE_STATE:キャラ番号:回避率 = 
基礎BATTLE_STATE:キャラ番号:クリティカル率 = 
基礎BATTLE_STATE:キャラ番号:クリティカルダメージ率 = 150
基礎BATTLE_STATE:キャラ番号:敵対心 = 100



@戦闘ステータスレベルアップ設定_XXXX(キャラ番号, 上昇レベル)
#DIM キャラ番号
#DIM 上昇レベル
#DIM 計算後レベル

計算後レベル = 基礎BATTLE_STATE:キャラ番号:Lv + 上昇レベル

;基礎上昇量を登録
;上昇量は「@レベルアップ処理」を参考
基礎BATTLE_STATE:キャラ番号:最大ＨＰ += （上昇する数値） * 上昇レベル
基礎BATTLE_STATE:キャラ番号:最大ＭＰ += （上昇する数値） * 上昇レベル
基礎BATTLE_STATE:キャラ番号:攻撃力 += （上昇する数値） * 上昇レベル
基礎BATTLE_STATE:キャラ番号:防御力 += （上昇する数値） * 上昇レベル
基礎BATTLE_STATE:キャラ番号:回復力 += （上昇する数値） * 上昇レベル
基礎BATTLE_STATE:キャラ番号:行動速度 += （上昇する数値） * 上昇レベル

;特定のレベルを境に上昇するステータス
IF 基礎BATTLE_STATE:キャラ番号:Lv < 20 && 計算後レベル >= 20
	基礎BATTLE_STATE:キャラ番号:DA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:TA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:命中率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:回避率 += 2（上昇する数値）
ENDIF
IF 基礎BATTLE_STATE:キャラ番号:Lv < 40 && 計算後レベル >= 40
	基礎BATTLE_STATE:キャラ番号:DA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:TA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:命中率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:回避率 += （上昇する数値）
ENDIF
IF 基礎BATTLE_STATE:キャラ番号:Lv < 60 && 計算後レベル >= 60
	基礎BATTLE_STATE:キャラ番号:DA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:TA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:命中率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:回避率 += （上昇する数値）
ENDIF
IF 基礎BATTLE_STATE:キャラ番号:Lv < 80 && 計算後レベル >= 80
	基礎BATTLE_STATE:キャラ番号:DA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:TA率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:命中率 += （上昇する数値）
	基礎BATTLE_STATE:キャラ番号:回避率 += （上昇する数値）
ENDIF

