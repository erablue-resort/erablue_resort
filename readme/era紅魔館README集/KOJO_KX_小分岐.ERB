	@KOJO_MESSAGE_COM_KX_1
	CALL TRAIN_MESSAGE
	CALL KOJO_MESSAGE_COM_KX_1_1
	RETURN RESULT
	@KOJO_MESSAGE_COM_KX_1_1
	;-------------------------------------------------
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL = 0
	;-------------------------------------------------
	IF LOCAL
		PRINTFORMW 
		RETURN 0
	ENDIF
	RETURN 1

	@KOJO_MESSAGE_COM_KX_1
	;↑この関数を口上呼び出し関数で呼ぶので変更してはいけない
	CALL TRAIN_MESSAGE
	;↑地の文がいらない場合はこれをカットする
	CALL KOJO_MESSAGE_COM_KX_1_1
	;↑ここは口上ファイル毎に変更できる
	;CALL KOJO_～～で他のコマンドや自作の関数を呼び出したりもできる
	RETURN RESULT

	@KOJO_MESSAGE_COM_KX_1_1
	;-------------------------------------------------
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL = 0
	;-------------------------------------------------
	IF LOCAL
	;↑LOCAL = 0にしてあるのでこのままでは↓の口上は表示されずRETURN 1される
		PRINTFORMW 
		RETURN 0
	ENDIF
	RETURN 1
	;↑RETURN 1 された場合はKOJO_MESSAGE_COM_KX_00があとで呼び出されるので口上を埋めた場合はLOCAL = 1
	;口上を出力したあとにRETURN 0することを想定している

