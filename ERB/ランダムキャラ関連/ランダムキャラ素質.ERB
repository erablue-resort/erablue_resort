#DIM 見た目年齢
#DIM 長命者フラグ
#DIM 恋人持ち

IF !未経験
	;非処女の場合
	IF 長命者フラグ
		;長命者の場合
		SELECTCASE 見た目年齢
			CASE IS >= 年齢層_中年
				;中年～老年 50%で未亡人
				IF RAND:2
					恋人持ち = 3
				ELSE
					恋人持ち = 0
				ENDIF
			CASEELSE
				;幼い～壮年 50%で未亡人、25%でセフレあり
				IF RAND:2
					恋人持ち = 3
				ELSEIF RAND:2
					恋人持ち = -2
				ELSE
					恋人持ち = 0
				ENDIF
		ENDSELECT
	ELSE
		;通常の場合
		SELECTCASE 見た目年齢
			CASE 年齢層_幼い
				;幼い 50%でセフレあり、25%で恋人持ち
				IF RAND:2
					恋人持ち = -2
				ELSEIF RAND:2
					恋人持ち = 1
				ELSE
					恋人持ち = 0
				ENDIF
			CASE 年齢層_若い, 年齢層_成人
				;若い～成人 想い人あり、恋人持ち、セフレありが各20%ずつ
				IF RAND:5
					恋人持ち = RAND:4 - 2
				ELSE
					恋人持ち = 0
				ENDIF
			CASE 年齢層_壮年
				;壮年 恋人持ち、人妻が各20%ずつ、想い人あり、セフレありが各10%ずつ
				IF RAND:5
					恋人持ち = RAND:4 - 1
					SIF 恋人持ち == -1 && RAND:2
						恋人持ち = -2
				ELSE
					恋人持ち = 0
				ENDIF
			CASE 年齢層_中年, 年齢層_老年, 年齢層_人外
				;中年～老年 50%で人妻、25%で未亡人
				IF RAND:2
					恋人持ち = 2
				ELSEIF RAND:2
					恋人持ち = 3
				ELSE
					恋人持ち = 0
				ENDIF
			CASEELSE
				;大人 想い人あり、恋人持ちが各20%ずつ、セフレあり、人妻が各10%ずつ
				IF RAND:5
					恋人持ち = RAND:4 - 2
					SIF 恋人持ち == -2 && RAND:2
						恋人持ち = 2
				ELSE
					恋人持ち = 0
				ENDIF
		ENDSELECT
	ENDIF

	;出産経験
	IF 恋人持ち == 2 || 恋人持ち == 3
		;人妻or未亡人に+0～3
		恋人持ち += 10000 * (RAND:2 + RAND:2 + RAND:2)
	ELSEIF 恋人持ち == -2 && RAND:50 == 0
		;セフレありに2%で+1
		恋人持ち -= 10000
	ENDIF
ELSE
	;処女の場合
	IF 長命者フラグ
		;長命者の場合
		SELECTCASE 見た目年齢
			CASE 年齢層_中年, 年齢層_老年, 年齢層_人外
				;中年～老年 なし
				恋人持ち = 0
			CASEELSE
				;幼い～壮年 10%で想い人あり
				IF RAND:10
					恋人持ち = 0
				ELSE
					恋人持ち = -1
				ENDIF
		ENDSELECT
	ELSE
		;通常の場合
		SELECTCASE 見た目年齢
			CASE 年齢層_幼い
				;幼い 5%で想い人あり
				IF RAND:20
					恋人持ち = 0
				ELSE
					恋人持ち = -1
				ENDIF
			CASE 年齢層_若い
				;若い 10%で想い人あり、2.5%で恋人持ち
				IF RAND:8
					恋人持ち = 0
				ELSEIF RAND:5
					恋人持ち = -1
				ELSE
					恋人持ち = 1
				ENDIF
			CASE 年齢層_中年, 年齢層_老年, 年齢層_人外
				;中年～老年 なし
				恋人持ち = 0
			CASEELSE
				;成人～壮年 10%で恋人持ち、2.5%で想い人あり
				IF RAND:8
					恋人持ち = 0
				ELSEIF RAND:5
					恋人持ち = 1
				ELSE
					恋人持ち = -1
				ENDIF
		ENDSELECT
	ENDIF
ENDIF
RETURNF 恋人持ち

