			SELECTCASE 見た目年齢
				CASE 年齢層_幼い
					体格 = RAND:5 - 2
					SIF 体格 == 1 || 体格 == 2
						体格 = -1
				CASEELSE
					体格 = RAND:5 - 2
					SIF 体格 == -2 || 体格 == 2
						体格 = 0
			ENDSELECT
		ELSE
			;男性
			SELECTCASE 見た目年齢
				CASE 年齢層_幼い, 年齢層_若い
					体格 = RAND:5 - 2
					SIF 体格 == 1 || 体格 == 2
						体格 = -1
				CASEELSE
					体格 = RAND:5 - 2
					SIF 体格 == -2 || 体格 == 2
						体格 = 0
			ENDSELECT
		ENDIF
ENDSELECT
