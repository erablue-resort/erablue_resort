	RETURN 0
SIF GETBIT(OPTION変数:オート縁結び詳細, 0) == 0 && GETBIT(OPTION変数:オート縁結び詳細, 1) == 0
	RETURN 0

;設定カップル数を設定
設定カップル数 = RAND:4
;設定が０なら戻す
SIF 設定カップル数 <= 0
	RETURN 0

VARSET 候補配列
;滞在キャラを全員見て候補配列に登録
FOR 対象キャラ１, 1, CHARANUM
	SIF CFLAG:対象キャラ１:滞在期間 <= 0
		CONTINUE
	;特殊条件チェック
	TRYCALLFORM 縁結び特殊条件_左キャラ時_{NO:対象キャラ１}(対象キャラ１)
	IF RESULT == 0
		;性欲なし・性別なしはダメ
		SIF TALENT:対象キャラ１:性欲 == -2
			CONTINUE
		SIF TALENT:対象キャラ１:性別 == 0
			CONTINUE
		;無知もダメ
		SIF 知識素質:対象キャラ１:性知識 < 0
			CONTINUE
		;陥落不可素質
		SIF GETBIT(CSVTALENT(NO:対象キャラ１, GETNUM(TALENT, "陥落不可")), 0) && GETBIT(TALENT:対象キャラ１:陥落不可, 1)
			CONTINUE
	ELSEIF RESULT == -1
		CONTINUE
	ENDIF
	;ちゃんと相手候補がいるかチェック
	IF GETBIT(OPTION変数:オート縁結び詳細, 0)
		;恋慕
		;既に恋慕セットするorされてたらアウト
		
		IF 縁結びセット数取得(対象キャラ１, "恋慕")
			CONTINUE
		ENDIF
		;相手が存在するか
		CALL 縁結び候補存在判定(対象キャラ１, "恋慕")
		IF RESULT
			;相手候補がいるなら配列にセットして次へ
			候補配列:候補総数 = 対象キャラ１
			候補総数 ++
			CONTINUE
		ENDIF
	ENDIF
	IF GETBIT(OPTION変数:オート縁結び詳細, 1)
		;セフレ
		;オートで結べるセフレは３組まで
		IF 縁結びセット数取得(対象キャラ１, "セフレ") >= 3
			CONTINUE
		ENDIF
		;相手が存在するか
		CALL 縁結び候補存在判定(対象キャラ１, "セフレ")
		IF RESULT
			;相手候補がいるなら配列にセットして次へ
			候補配列:候補総数 = 対象キャラ１
			候補総数 ++
			CONTINUE
		ENDIF
	ENDIF
NEXT

