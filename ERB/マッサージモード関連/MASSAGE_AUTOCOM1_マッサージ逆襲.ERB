@MASSAGE_AUTOCOM1
;処理はすべてCOMENDで行う
;処理の発動キー用にSELECTCOMを代入
SELECTCOM = 1001

RETURN 1

@MASSAGE_AUTOCOM_ABLE1(キャラ番号)
#DIM キャラ番号
;オプション制御
SIF OPTION変数:マッサージ_逆襲禁止
	RETURN 0
;ターゲットが陥落済みであること
SIF 陥落チェック(キャラ番号) == 0
	RETURN 0
;初うふふ済み必須
SIF 初体験日取得("うふふ", キャラ番号, PLAYER) == 0
	RETURN 0
;理性は削れてること
SIF BASE:キャラ番号:理性 > 1
	RETURN 0
;専用ステータスを参照
SIF BASE:キャラ番号:ちんイラ < 200
	RETURN 0
SIF BASE:キャラ番号:ちんイラ < RAND:1000
	RETURN 0
;通常マッサージ直後には発動しない
TRYCALLFORMF MASSAGE_COMTYPE_{コマンド履歴:0}
SIF TFLAG:コマンドタイプ受渡 == 0
	RETURN 0

RETURN 1

