@MASSAGE_BEFORE_AUTOCOM
#DIM 行動候補, 500
#DIM COM番号
#DIM 判定キャラ

AUTOCOM_派生保存 = 
IF TARGET == MASTER
	判定キャラ = PLAYER
ELSE
	判定キャラ = TARGET
ENDIF

;オプションによる制御
SIF GETBIT(FLAG:オートコマンド切り替えオプション, 0) && TALENT:判定キャラ:自由奔放 < 2
	RETURN 0

;鬼灯中はダメ
SIF TFLAG:マッサージ_鬼灯の香使用時間 != 0
	RETURN 0

;相手が強い絶頂してる時は動かない
SIF NOWEX:判定キャラ:多重絶頂 > 1
	RETURN 0
;食いしばり中は動かない
SIF TCVAR:判定キャラ:食いしばりフラグ
	RETURN 0
;体力限界中も動かない
SIF CFLAG:判定キャラ:体力限界
	RETURN 0

VARSET 行動候補

;既に現在のサイクルがオートコマンドだった場合は発動しない
SIF TFLAG:オートコマンドフラグ
	RETURN 0

LOCAL:1 = 0
;反応コマンドの有無（通常優先度の反応コマンド）
;AUTOCOMを全部見て行って条件とマッチしたCOM番号を登録しておく
FOR COM番号, 1, 100
	TRYCCALLFORM MASSAGE_AUTOCOM_ABLE{COM番号}(判定キャラ)
		IF RESULT
			行動候補:(LOCAL:1) = COM番号
			LOCAL:1 += 1
		ENDIF
	CATCH
	ENDCATCH
NEXT

;登録したCOM番号からランダムで選出
IF 行動候補:0
	AUTOCOM_実行番号保存 = 判定キャラ
	RETURN 行動候補:(RAND:(LOCAL:1))
ENDIF

RETURN 0
