		ENDSELECT 
	;ハーヴィンはハーヴィン並
	ELSEIF TALENT:ARG:種族 == 種族_ハーヴィン
		TALENT:ARG:体格 = 体格_ハーヴィン並
	ELSEIF TALENT:ARG:種族 == 種族_ドラフ
