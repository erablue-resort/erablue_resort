;------------------------------------------------------------------------------
;A挿入時、快楽で腰が浮く
;------------------------------------------------------------------------------
@AUTOCOM40
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_快Ａ(AUTOCOM_相手番号保存, PLAYER, 500)
CALL SOURCE_CALC_露出_反感無し(AUTOCOM_相手番号保存, PLAYER, 30)
CALL SOURCE_CALC_接触_不快無し(AUTOCOM_相手番号保存, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(PLAYER, AUTOCOM_相手番号保存, 300)

TIME_A腰が浮く:AUTOCOM_相手番号保存:0 = TIME

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:AUTOCOM_相手番号保存:Ａ性交経験 ++
EXP:PLAYER:Ｃ性交経験_Ａ挿入 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(AUTOCOM_相手番号保存,PLAYER)
	EXP:AUTOCOM_相手番号保存:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:AUTOCOM_相手番号保存:愛情経験 += TALENT:AUTOCOM_相手番号保存:恋慕 * 2

RETURN 1

@AUTOCOM_ABLE40(キャラ番号)
#DIM キャラ番号
;対象がTARGETである
SIF TARGET != キャラ番号
	RETURN 0
;Ａ正常位、Ａ後背位、Ａ寝バックで発生
SIF MODE_確認_ターゲット側("Ａ正常位", キャラ番号) < 0 && MODE_確認_ターゲット側("Ａ後背位", キャラ番号) < 0 && MODE_確認_ターゲット側("Ａ寝バック", キャラ番号) < 0
	RETURN 0
;１日に１回のみ発動
SIF TIME_A腰が浮く:キャラ番号:0
	RETURN 0
;欲情PALAMLv4必要
SIF PALAM:キャラ番号:欲情 < PALAMLV:4
	RETURN 0
;Ａ挿入派生スキル使用時に確率発生
SIF コマンド履歴:0 != -1
	RETURN 0
SIF STRCOUNT(派生コマンド履歴:0, "62_") == 0
	RETURN 0
;快Ａが7000以上である
SIF PALAM:キャラ番号:快Ａ < 7000
	RETURN 0
RETURN 1

