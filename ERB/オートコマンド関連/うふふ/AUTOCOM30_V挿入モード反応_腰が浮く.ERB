@AUTOCOM_ABLE30(キャラ番号)
#DIM キャラ番号
;対象がTARGETである
SIF TARGET != キャラ番号
	RETURN 0
;正常位、後背位、寝バックで発生
SIF !MODE_存在判定_ターゲット側("正常位", キャラ番号) && !MODE_存在判定_ターゲット側("後背位", キャラ番号) && !MODE_存在判定_ターゲット側("寝バック", キャラ番号)
	RETURN 0
;30分に１回のみ発動
SIF TIME - TIME_挿入時反応:キャラ番号:0 < 31
	RETURN 0
;欲情PALAMLv4必要
SIF PALAM:キャラ番号:欲情 < PALAMLV:4
	RETURN 0
;V挿入派生スキル使用時に確率発生
SIF コマンド履歴:0 != -1
	RETURN 0
SIF STRCOUNT(派生コマンド履歴:0, "60_") == 0
	RETURN 0
;快Vが7000以上である
SIF PALAM:キャラ番号:快Ｖ < 7000
	RETURN 0
RETURN 1

