;飲食店系エリア
@IS_FOOD_COURT(判定マップ種, 判定位置)
#FUNCTION
#DIM 判定マップ種
#DIM 判定位置

SELECTCASE 判定マップ種
	CASE 0
		SELECTCASE 判定位置
			CASE 4
				RETURNF 1
		ENDSELECT
	CASE 1
		SELECTCASE 判定位置
			CASE 3 TO 8
				SIF 空艇港店舗状況:判定位置:0 == 3
					RETURNF 1
			CASE IS >= 1000
				SIF 商業区店割り配列:(判定位置 - 1000):店属性 == "食事施設"
					RETURNF 1
		ENDSELECT
	CASE 3
		SELECTCASE 判定位置
			CASE 2
				RETURNF 1
		ENDSELECT
ENDSELECT

