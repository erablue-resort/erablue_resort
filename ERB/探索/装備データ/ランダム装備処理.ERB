	ジョブ証名:LOCAL '= SUBSTRINGU(出現率関数保存:LOCAL, STRLENSU("証出現率_"), -1)
	証所持フラグ = 0
	FOR データベース番号, 1, DT_ROW_LENGTH("所持ジョブ証データベース")
