		IF ISNUMERIC(DT_CELL_GETS("所持乗機データベース", 対象乗機id, @"武装{武装番号}", 1))
			DT_CELL_SET "所持兵器データベース", TOINT(DT_CELL_GETS("所持乗機データベース", 対象乗機id, @"武装{武装番号}", 1)), "装備乗機id", 0, 1
