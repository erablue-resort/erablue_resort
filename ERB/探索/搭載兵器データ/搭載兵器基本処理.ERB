	IF DT_CELL_GETS("所持兵器データベース", ループ用, "兵器名") == 兵器名
		IF DT_CELL_GET("所持兵器データベース", ループ用, "設計状態フラグ")
			SIF 設計状態 != 0
				RETURNF 1
		ELSE
			SIF 設計状態 != 1
				RETURNF 1
		ENDIF
	ENDIF
NEXT
RETURNF 0


