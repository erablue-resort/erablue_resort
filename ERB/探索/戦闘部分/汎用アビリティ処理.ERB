	効果数値 = 300
ELSEIF LEVEL >= 2
	アビ名 = ファイア＋
	消費ＭＰ = 17
	効果数値 = 250
ELSEIF LEVEL >= 1
	アビ名 = ファイア
	消費ＭＰ = 15
	効果数値 = 200
ELSE
	アビ名 = 
ENDIF

