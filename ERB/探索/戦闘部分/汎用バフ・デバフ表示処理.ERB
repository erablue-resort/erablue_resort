	PRINTFORM 効果割合：{バフ・デバフ効果割合, 4}％　　
	要改行フラグ = 1
ENDIF
SIF 要改行フラグ
	PRINTL 

要改行フラグ = 0
IF バフ・デバフ持続ターン < 0
	PRINT 持続ターン：永続　　
	要改行フラグ = 1
ELSEIF バフ・デバフ持続ターン > 0
