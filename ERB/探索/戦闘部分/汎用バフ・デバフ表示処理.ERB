	IF STRFIND(説明文文字列, @"%登録済デバフ種類:LOCAL%効果") >= 0
		バフ・デバフ説明文 = 
		CALLFORM デバフ説明文_%登録済デバフ種類:LOCAL%("", 0, 0)
		説明文文字列 '= REPLACE(説明文文字列, @"%登録済デバフ種類:LOCAL%効果", @"<font color='#%カラーパレット_HTML("紫")%'><nonbutton title='<br>%バフ・デバフ説明文%'>%登録済デバフ種類:LOCAL%</nonbutton></font>効果")
	ENDIF
