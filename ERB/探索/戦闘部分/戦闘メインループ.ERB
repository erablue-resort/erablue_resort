	SIF 敵BATTLE_STATE_STR:LOCAL:エネミー名 == ""
		CONTINUE
	SIF 敵BATTLE_STATE:LOCAL:ＨＰ < 1
		CONTINUE
	SIF !敵BATTLE_STATE:LOCAL:行動済みフラグ
		LOCAL:3 = 1
	LOCAL:2 = 1
NEXT

IF !LOCAL:2
	CALL 戦闘勝利時処理
	RETURN 0
ELSEIF !LOCAL:1
	CALL 全滅時処理
	RETURN 1
ELSEIF LOCAL:3 == 0
	;ターン数を増やして最初から行動
	戦闘行動内容 = -1
	CALL ターン切り替え処理
	IF RESULT
		GOTO 戦闘終了処理
	ENDIF
ENDIF

