			CASE "敵全体"
				SIF 判定隊列 <= 19 && 判定隊列 >= 10
					RETURNF 検索番号
			CASEELSE
				IF STRFIND(LOCALS, "_") >= 0
					;隊列複数指定を想定
					VARSET RESULTS
					SPLIT LOCALS, "_", RESULTS
					FOR LOCAL, 0, RESULT
						;引っかかったらOKを返す
						IF STRFIND(RESULTS:LOCAL, "NO") >= 0
							;特定キャラ指定の場合
							SIF REPLACE(RESULTS:LOCAL, "NO", "") == @"{NO:(BATTLE_STATE:判定隊列:0)}"
