			SIF バフ・デバフ効果検索("ALL", "枠", DT_CELL_GETS("戦闘効果データベース", 検索番号, "付随効果枠"), 判定隊列) == -1
				CONTINUE
		ENDIF
	ENDIF

	LOCALS '= DT_CELL_GETS("戦闘効果データベース", 検索番号, "適用範囲")
	IF LOCALS == @"{判定隊列}" || LOCALS == @"NO{NO:(BATTLE_STATE:判定隊列:0)}"
