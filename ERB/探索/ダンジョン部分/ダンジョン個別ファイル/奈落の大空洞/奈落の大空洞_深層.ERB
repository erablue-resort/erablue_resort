@固有ターン終了時処理_フィールド_怨念の呻き
#DIM 味方番号
#DIM メッセージ表示フラグ
#DIM 成功率一時格納

メッセージ表示フラグ = 0
FOR 味方番号, 0, 4
	SIF BATTLE_STATE:味方番号:キャラ登録番号 < 1
		CONTINUE
	SIF BATTLE_STATE:味方番号:ＨＰ < 1
		CONTINUE
	SIF デバフ番号取得("混乱", 味方番号) >= 0
		CONTINUE

	IF !メッセージ表示フラグ
		WSTR:(K++) = 呻きのような音があたりに激しく鳴り響く！
		メッセージ表示フラグ = 1
	ENDIF
	IF バフ番号取得("弱体無効", 味方番号) >= 0
		CALL バフ回数経過処理(味方番号, "弱体無効")
		WSTR:(K++) = %CALLNAME:(BATTLE_STATE:味方番号:キャラ登録番号)%は弱体無効効果により混乱効果を弾いた！
		CONTINUE
	ENDIF

	成功率一時格納 = 5
	CALL バフ・デバフ測定(味方番号, "弱体耐性")
	成功率一時格納 -= RESULT
	CALL バフ・デバフ測定(味方番号, "状態異常耐性_混乱")
	成功率一時格納 -= RESULT
	IF RAND(100) > 成功率一時格納
		WSTR:(K++) = %CALLNAME:(BATTLE_STATE:味方番号:キャラ登録番号)%は混乱効果を受けなかった…
		CONTINUE
	ENDIF
	{
	DT_ROW_ADD "戦闘効果データベース", "効果枠", "怨念の呻き", "バフ・デバフフラグ", "デバフ", "適用範囲", @"{味方番号}",
	"対象能力", "混乱", "効果名", "怨念の呻き", "持続ターン", -1
	}
	WSTR:(K++) = %CALLNAME:(BATTLE_STATE:味方番号:キャラ登録番号)%は混乱効果を受けた！
NEXT

CALL メッセージ欄表示用関数(,,,0)
CALL 口上変数初期化


