FOR LOCAL, 0, 2
	GDISPOSE レイヤー番号 + 14 + LOCAL 
	GCREATE レイヤー番号 + 14 + LOCAL , 360, 90
	GSETBRUSH レイヤー番号 + 14 + LOCAL , 0xFFC0C0C0
