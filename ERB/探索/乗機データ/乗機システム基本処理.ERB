		DRAWLINE
		PRINTL ■必要素材
		素材不足フラグ = 0
		VARSET 素材id
		FOR LOCAL, 0, 50
			SIF 作成素材登録:LOCAL == ""
				BREAK
			SPLIT 作成素材登録:LOCAL, "_", 分割文字列

			FOR LOCAL:1, 0, DT_ROW_LENGTH("所持素材データベース")
				;該当素材のidを引っ張ってくる
				IF DT_CELL_GETS("所持素材データベース", LOCAL:1, "素材アイテム名") == 分割文字列:0
					素材id:LOCAL = DT_CELL_GET("所持素材データベース", LOCAL:1, "id")
					BREAK
				ENDIF
			NEXT
			IF 素材id:LOCAL == 0
				PRINTW 素材名が不正です。
				RETURN -1
			ENDIF
			SETCOLOR 属性数値文字色変換(DT_CELL_GET("所持素材データベース", 素材id:LOCAL, "素材属性", 1))
			PRINTFORML 　%分割文字列:0%：%分割文字列:1, 3%個 / 所持数{DT_CELL_GET("所持素材データベース", 素材id:LOCAL, "所持素材数", 1)}個
