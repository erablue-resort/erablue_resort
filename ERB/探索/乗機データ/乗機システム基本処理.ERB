			IF DT_CELL_GET("所持素材データベース", 素材id:LOCAL, "所持素材数", 1) < TOINT(分割文字列:1)
				素材不足フラグ = 1
			ENDIF
		NEXT
		PRINTL
		IF 素材不足フラグ
			PRINTL 素材が足りません。
		ELSE
			PRINTBUTTON "[0] 作成する", 0
		ENDIF
		PRINTL
		PRINTBUTTON "[999] 戻る", 999
		PRINTL
		BINPUT
		LOCAL = RESULT
		SELECTCASE LOCAL
			CASE 999
				;リスト表示に戻るだけなのでRETURNしない
			CASE 0
				FOR LOCAL, 0, 50
					SIF 作成素材登録:LOCAL == ""
						BREAK
					SPLIT 作成素材登録:LOCAL, "_", 分割文字列
					;素材消費
					DT_CELL_SET "所持素材データベース", 素材id:LOCAL, "所持素材数", DT_CELL_GET("所持素材データベース", 素材id:LOCAL, "所持素材数", 1) - TOINT(分割文字列:1), 1
				NEXT
				;設計フラグを0にする
				DT_CELL_SET "所持乗機データベース", 表示id, "設計状態フラグ", 0, 1
				PRINTFORMW %DT_CELL_GETS("所持乗機データベース", 表示id, "乗機名", 1)%を作成しました。
		ENDSELECT
	CASE IS < 1000
