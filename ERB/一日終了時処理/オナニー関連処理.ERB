
@野外オナニー判定(ARG)
#DIM オナニーしやすさ_部位, 4
#DIM オナニー候補, 4

;既に野外オナニー変数に値が入ってる時はオナニー中
FOR LOCAL, 0, 5
	IF 野外オナニー変数:ARG:LOCAL > 0
		;オナニー中にあなたが物陰に入ってきたパターン
		IF CFLAG:PLAYER:隠密 && IS_SAME_ROOM(ARG)
			DRAWLINE
			PRINTFORML %CALLNAME:PLAYER%が物陰に入ると、そこにいた%CALLNAME:ARG%はひどく慌てた様子で身なりを整え
			PRINTFORMW %CALLNAME:PLAYER%と目を合わせずに物陰から去っていった…
			野外オナニー変数:ARG:LOCAL = 0
			野外オナニー変数:ARG:6 = 0
			CFLAG:ARG:隠密 = 0
			RETURN 0
		ENDIF
		野外オナニー変数:ARG:LOCAL -= TIME_PROGRESS(TFLAG:行動前時刻)
		;残り時間がまだ残ってるなら隠密を入れ直して戻す
		IF 野外オナニー変数:ARG:LOCAL > 0
			CFLAG:ARG:隠密 = 1
			RETURN 1
		ELSE
			;残ってないなら絶頂処理
			;変数の６番で絶頂予約、部位+10で部位受け渡し
			野外オナニー変数:ARG:6 = LOCAL + 10
			CFLAG:ARG:隠密 = 1
			RETURN 0
		ENDIF
	ENDIF
NEXT

SIF CFLAG:ARG:睡眠
	RETURN 0

;性知識が無い場合はオナニー出来ない
SIF 知識素質:ARG:性知識 < 1 && EXP:ARG:自慰経験 <= 0
	RETURN 0

;性欲や自慰しやすいなどの条件を見る
IF BASE:ARG:性欲 >= (8000 - TALENT:ARG:自慰しやすい * 2000)
	;通常オナニー条件
ELSEIF CFLAG:ARG:オナニー覚えたて
	;覚えたて補正
ELSE
	;上記の条件に当てはまらないなら0で戻す
	RETURN 0
ENDIF

;既に誰かが同じ場所で隠密してるなら出来ない
FOR LOCAL, 0, CHARANUM
	SIF CFLAG:ARG:現在位置 == CFLAG:LOCAL:現在位置 && CFLAG:ARG:現在マップ種別 == CFLAG:LOCAL:現在マップ種別 && CFLAG:LOCAL:隠密
		RETURN 0
NEXT

;条件を抜けてきたとしても、前回の野外オナニーから２時間経過してないとしない
SIF 野外オナニー変数:ARG:5 + 120 > TIME
	RETURN 0

;感覚開発度と敏感鈍感で候補数値を決定
オナニーしやすさ_部位:部位_Ｃ = ABL:ARG:Ｃ感覚 + TALENT:ARG:Ｃ感度
オナニーしやすさ_部位:部位_Ｖ = ABL:ARG:Ｖ感覚 + TALENT:ARG:Ｖ感度
;処女・男はVを使わない
SIF !EXP:ARG:Ｖ経験 || GETBIT(TALENT:ARG:性別, 0) == 0
	オナニーしやすさ_部位:部位_Ｖ = -1
オナニーしやすさ_部位:部位_Ａ = ABL:ARG:Ａ感覚 + TALENT:ARG:Ａ感度
;アナル未経験はAを使わない
SIF !EXP:ARG:Ａ経験
	オナニーしやすさ_部位:部位_Ａ = -1
オナニーしやすさ_部位:部位_Ｂ = ABL:ARG:Ｂ感覚 + TALENT:ARG:Ｂ感度
;男はいまんとこ胸を使わない
SIF GETBIT(TALENT:ARG:性別, 0) == 0
	オナニーしやすさ_部位:部位_Ｂ = -1

;どの部位でオナニーするか決定する
LOCAL:1 = 0
FOR LOCAL, 0, 4
	IF オナニー候補:0 < オナニーしやすさ_部位:LOCAL
		LOCAL:1 = 0
		VARSET オナニー候補, -1
		オナニー候補:0 = LOCAL
	ELSEIF オナニー候補:0 == オナニーしやすさ_部位:LOCAL
		LOCAL:1 += 1
		オナニー候補:(LOCAL:1) = LOCAL
	ENDIF
NEXT
;候補の中からランダムで決定
LOCAL = RAND:(LOCAL:1 + 1)
;オナニー時間は15分
野外オナニー変数:ARG:(オナニー候補:LOCAL) = 15
;変数の5番にオナニー開始時間を記録
野外オナニー変数:ARG:5 = TIME
CFLAG:ARG:隠密 = 1

RETURN 1

