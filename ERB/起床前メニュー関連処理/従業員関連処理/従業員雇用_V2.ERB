FOR LOCAL, 0, 200
	;肉体熟知は別枠
	SIF LOCAL == 89
		CONTINUE

	LOCAL:1 = ランダムキャラデータ_GET(Ｒキャラ追加候補記録, 管理番号, "経験", LOCAL)
