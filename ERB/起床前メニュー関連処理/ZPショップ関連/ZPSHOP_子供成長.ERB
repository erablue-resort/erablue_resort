#DIM ページ
#DIM 子供人物番号

LOCAL:1 = 0
FOR LOCAL, 住宅街広さ(), VARSIZE("定住者部屋割り配列")
	IF 定住者部屋割り配列:LOCAL == ""
		LOCAL:1 = 1
		BREAK
	ENDIF
NEXT
IF LOCAL:1 == 0
	PRINTW 住宅街が一杯です。
	RETURN
ENDIF

ページ = 0
$INPUT_LOOP
PRINTL 
CALL 子供一覧表示(0, ページ, "成長可能")
INPUT
SELECTCASE RESULT
	CASE -1
		RETURN -1
	CASE -2
		ページ ++
		REUSELASTLINE 
		GOTO INPUT_LOOP
	CASE -3
		ページ --
		REUSELASTLINE 
		GOTO INPUT_LOOP
	CASE IS > 0
		子供人物番号 = RESULT
		REUSELASTLINE 
		SIF !保育所子供_チェック(0, 子供人物番号)
