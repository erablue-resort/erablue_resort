IF GETNUM(プレゼント履歴, @"%RSTR:コマンド結果受渡し文字列%") > -1
	SIF プレゼント履歴:TARGET:(RSTR:コマンド結果受渡し文字列) < 1
		プレゼント履歴:TARGET:(RSTR:コマンド結果受渡し文字列) = DAY
ENDIF

;キャラの特殊反応の確認
RESULT = 0
TRYCALLFORM プレゼント特殊反応_CHARAEVENT_{NO:TARGET}(RSTR:コマンド結果受渡し文字列)
IF RESULT
	;特殊反応あり
	RFLAG:コマンド結果受渡し変数 = 2
ELSE
	;好みに含まれているか判定
	IF プレゼント好み判定(キャラ好み, DT_CELL_GETS("所持素材データベース", 選択プレゼント番号, "プレゼントカテゴリ", 1), TALENT:TARGET:飲兵衛)
		;好みに含まれる
		RFLAG:コマンド結果受渡し変数 = 1
	ELSE
		;好みに含まれない
		RFLAG:コマンド結果受渡し変数 = 0
	ENDIF

	;歓楽強度
	LOCAL:0 = 200 * RFLAG:コマンド結果受渡し変数２ + 400
	;征服
	LOCAL:1 = 50 * RFLAG:コマンド結果受渡し変数２ + 100
	IF RFLAG:コマンド結果受渡し変数 == 0
		;通常反応
		TIMES LOCAL:0 , 1.00
		TIMES LOCAL:1 , 1.00
	ELSEIF RFLAG:コマンド結果受渡し変数 == 1
		;大成功時
		TIMES LOCAL:0 , 2.00
		TIMES LOCAL:1 , 2.00
	ENDIF

	CALL SOURCE_CALC_歓楽(TARGET, PLAYER, LOCAL:0)
	CALL SOURCE_CALC_征服(TARGET, PLAYER, LOCAL:1)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 80)

	CALL SOURCE_CALC_好感度要素_友情度UP(TARGET, PLAYER, LOCAL:0)
	CALL SOURCE_CALC_好感度要素_恋心度UP(TARGET, PLAYER, LOCAL:0 / 4)

	TCVAR:TARGET:摂取カロリー += RFLAG:コマンド結果受渡し変数３
ENDIF

TIME += 5
TCVAR:TARGET:プレゼント時刻 = TIME

RETURN 1


;プレゼントが好みか判定する関数
@プレゼント好み判定(キャラ好み, プレゼントカテゴリ, 飲兵衛)
#FUNCTION
#DIMS キャラ好み         ;"_"を含む
#DIMS プレゼントカテゴリ ;"_"を含む
#DIM 飲兵衛
#DIM 文字位置, 2
#DIM 終了フラグ

終了フラグ = 1
文字位置:0 = 0
DO
	文字位置:1 = STRFINDU(キャラ好み, "_", 文字位置:0)
	IF 文字位置:1 == -1
		終了フラグ = 0
		文字位置:1 = STRLENSU(キャラ好み)
	ENDIF
	SIF プレゼント好み判定_1_N(SUBSTRINGU(キャラ好み, 文字位置:0, 文字位置:1 - 文字位置:0), プレゼントカテゴリ, 飲兵衛)
		RETURNF 1
	文字位置:0 = 文字位置:1 + 1
LOOP 終了フラグ
RETURNF 0


@プレゼント好み判定_1_N(キャラ好み, プレゼントカテゴリ, 飲兵衛)
#FUNCTION
#DIMS キャラ好み         ;"_"を含まない
#DIMS プレゼントカテゴリ ;"_"を含む
#DIM 飲兵衛
#DIM 文字位置, 2
#DIM 終了フラグ

SIF キャラ好み == ""
	RETURNF 0

終了フラグ = 1
文字位置:0 = 0
DO
	文字位置:1 = STRFINDU(プレゼントカテゴリ, "_", 文字位置:0)
	IF 文字位置:1 == -1
		終了フラグ = 0
		文字位置:1 = STRLENSU(プレゼントカテゴリ)
	ENDIF
	SIF プレゼント好み判定_1_1(キャラ好み, SUBSTRINGU(プレゼントカテゴリ, 文字位置:0, 文字位置:1 - 文字位置:0), 飲兵衛)
		RETURNF 1
	文字位置:0 = 文字位置:1 + 1
LOOP 終了フラグ
RETURNF 0


@プレゼント好み判定_1_1(キャラ好み, プレゼントカテゴリ, 飲兵衛)
#FUNCTION
#DIMS キャラ好み         ;"_"を含まない
#DIMS プレゼントカテゴリ ;"_"を含まない
#DIM 飲兵衛

SIF プレゼントカテゴリ == ""
	RETURNF 0
SIF キャラ好み == プレゼントカテゴリ
	RETURNF 1

SELECTCASE キャラ好み
	CASE "飲食系"
		IF 飲兵衛 < 0 && プレゼントカテゴリ == "酒"
			;酒嫌いは酒を飲食系として扱わない
		ELSE
			SIF MATCH(好物一覧_飲食系, プレゼントカテゴリ)
				RETURNF 1
		ENDIF
	CASE "芸術品"
		SIF MATCH(好物一覧_芸術品, プレゼントカテゴリ)
			RETURNF 1
	CASE "美容系"
		SIF MATCH(好物一覧_美容系, プレゼントカテゴリ)
			RETURNF 1
	CASE "実用品"
		SIF MATCH(好物一覧_実用品, プレゼントカテゴリ)
			RETURNF 1
ENDSELECT
RETURNF 0

