DRAWLINE
PRINTL ・表示カテゴリ絞り込み
SIF 絞り込み文字列 == "飲食系"
	SETCOLOR カラーパレット("黄")
PRINTBUTTON "[飲食系]", -100
RESETCOLOR
PRINT ：
FOR LOCAL, 0, VARSIZE("好物一覧_飲食系")
	SIF 絞り込み文字列 == "飲食系"
		SETCOLOR カラーパレット("黄")
	SIF 絞り込み文字列 == 好物一覧_飲食系:LOCAL
		SETCOLOR カラーパレット("黄")
	PRINTBUTTON @"[%好物一覧_飲食系:LOCAL%]", -101 - LOCAL
	RESETCOLOR
	PRINT  
NEXT
PRINTL
SIF 絞り込み文字列 == "芸術品"
	SETCOLOR カラーパレット("黄")
PRINTBUTTON "[芸術品]", -200
RESETCOLOR
PRINT ：
FOR LOCAL, 0, VARSIZE("好物一覧_芸術品")
	SIF 絞り込み文字列 == "芸術品"
		SETCOLOR カラーパレット("黄")
	SIF 絞り込み文字列 == 好物一覧_芸術品:LOCAL
		SETCOLOR カラーパレット("黄")
	PRINTBUTTON @"[%好物一覧_芸術品:LOCAL%]", -201 - LOCAL
	RESETCOLOR
	PRINT  
NEXT
PRINTL
SIF 絞り込み文字列 == "美容系"
	SETCOLOR カラーパレット("黄")
PRINTBUTTON "[美容系]", -300
RESETCOLOR
PRINT ：
FOR LOCAL, 0, VARSIZE("好物一覧_美容系")
	SIF 絞り込み文字列 == "美容系"
		SETCOLOR カラーパレット("黄")
	SIF 絞り込み文字列 == 好物一覧_美容系:LOCAL
		SETCOLOR カラーパレット("黄")
	PRINTBUTTON @"[%好物一覧_美容系:LOCAL%]", -301 - LOCAL
	RESETCOLOR
	PRINT  
NEXT
PRINTL
SIF 絞り込み文字列 == "実用品"
	SETCOLOR カラーパレット("黄")
PRINTBUTTON "[実用品]", -400
RESETCOLOR
PRINT ：
FOR LOCAL, 0, VARSIZE("好物一覧_実用品")
	SIF 絞り込み文字列 == "実用品"
		SETCOLOR カラーパレット("黄")
	SIF 絞り込み文字列 == 好物一覧_実用品:LOCAL
		SETCOLOR カラーパレット("黄")
	PRINTBUTTON @"[%好物一覧_実用品:LOCAL%]", -401 - LOCAL
	RESETCOLOR
	PRINT  
NEXT
PRINTL
FOR LOCAL, 0, VARSIZE("好物一覧_その他")
	SIF 絞り込み文字列 == 好物一覧_その他:LOCAL
		SETCOLOR カラーパレット("黄")
	PRINTBUTTON @"[%好物一覧_その他:LOCAL%]", -501 - LOCAL
	RESETCOLOR
	PRINT  
NEXT
PRINTL
DRAWLINE

;まずプレゼントアイテム一覧を出す
IF 絞り込み文字列 == ""
	CALL 素材アイテム一覧表示("プレゼントカテゴリ <> '' and 所持素材数 > 0", 1, , 好み情報)
ELSE
	IF 絞り込み文字列 == "飲食系"
		表示条件 = プレゼントカテゴリ LIKE '\%肉\%' Or プレゼントカテゴリ LIKE '\%魚\%' Or プレゼントカテゴリ LIKE '\%野菜\%' Or プレゼントカテゴリ LIKE '\%お菓子\%' Or プレゼントカテゴリ LIKE '\%珍味\%' Or プレゼントカテゴリ LIKE '\%酒\%' Or プレゼントカテゴリ LIKE '\%茶類\%' Or プレゼントカテゴリ LIKE '\%飲食系\%'
	ELSEIF 絞り込み文字列 == "芸術品"
		表示条件 = プレゼントカテゴリ LIKE '\%宝石\%' Or プレゼントカテゴリ LIKE '\%絵画\%' Or プレゼントカテゴリ LIKE '\%彫刻\%' Or プレゼントカテゴリ LIKE '\%詩\%' Or プレゼントカテゴリ LIKE '\%芸術品\%'
	ELSEIF 絞り込み文字列 == "美容系"
		表示条件 = プレゼントカテゴリ LIKE '\%アクセサリ\%' Or プレゼントカテゴリ LIKE '\%化粧品\%' Or プレゼントカテゴリ LIKE '\%美容系\%'
	ELSEIF 絞り込み文字列 == "実用品"
		表示条件 = プレゼントカテゴリ LIKE '\%文房具\%' Or プレゼントカテゴリ LIKE '\%健康器具\%' Or プレゼントカテゴリ LIKE '\%日用品\%' Or プレゼントカテゴリ LIKE '\%調理器具\%' Or プレゼントカテゴリ LIKE '\%工具\%' Or プレゼントカテゴリ LIKE '\%実用品\%'
	ELSE
		表示条件 = プレゼントカテゴリ LIKE '\%%絞り込み文字列%\%'
	ENDIF
	CALL 素材アイテム一覧表示(@"(%表示条件%) and 所持素材数 > 0", 1, , 好み情報)
ENDIF
SIF RESULT == -1
	RETURN -1
IF RESULT <= -100
	SELECTCASE RESULT
		CASE -100
			選択カテゴリ = 飲食系
		CASE -200
			選択カテゴリ = 芸術品
		CASE -300
			選択カテゴリ = 美容系
		CASE -400
			選択カテゴリ = 実用品
		CASE -199 TO -101
			選択カテゴリ '= 好物一覧_飲食系:(ABS(RESULT + 101))
		CASE -299 TO -201
			選択カテゴリ '= 好物一覧_芸術品:(ABS(RESULT + 201))
		CASE -399 TO -301
			選択カテゴリ '= 好物一覧_美容系:(ABS(RESULT + 301))
		CASE -499 TO -401
			選択カテゴリ '= 好物一覧_実用品:(ABS(RESULT + 401))
		CASE -599 TO -501
			選択カテゴリ '= 好物一覧_その他:(ABS(RESULT + 501))
	ENDSELECT
	IF 絞り込み文字列 == 選択カテゴリ
		絞り込み文字列 = 
	ELSE
		絞り込み文字列 '= 選択カテゴリ
	ENDIF
	GOTO 表示_LOOP
ENDIF
