
@COMNAME333
#FUNCTIONS
TSTR:コマンド名受渡 = リモコン操作

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_333
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("セクハラ")

@COM_TOOLTIP_333
LOCALS = <br>■リモコン操作<br>
LOCALS += "相手に装着させた道具を手元のリモコンで動かすコマンド。"
LOCALS += "<br>COMタイプ：セクハラ<br>取得ソース：露出・道具ごとに個別"
LOCALS += "<br>固有の取得経験：道具ごとに個別<br>"
TSTR:ツールチップ受渡 = %LOCALS%


@COM333
#DIM 候補配列, 50

;装着している道具を取得
LOCAL = 0
IF MODE_確認_完全一致("クリキャップ", PLAYER, TARGET) > -1
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 0
ENDIF
IF MODE_確認_完全一致("オナホール", PLAYER, TARGET) > -1
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER,200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 1
ENDIF
IF MODE_確認_完全一致("バイブ", PLAYER, TARGET) > -1
	CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 250)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 150)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)
	SETBIT LOCAL, 2
ENDIF
IF MODE_確認_完全一致("アナルバイブ", PLAYER, TARGET) > -1
	CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 250)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 150)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)
	SETBIT LOCAL, 3
ENDIF
IF MODE_確認_完全一致("ニプルキャップ", PLAYER, TARGET) > -1
	CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER,200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 4
ENDIF

RFLAG:コマンド結果受渡し変数 = LOCAL

EXP:PLAYER:道具使用経験 ++
RCVAR:TARGET:道具コマンドフラグ = 1

;野外
IF GET_TARGETNUM() > 1
	LOCAL:1 = 0
	FOR LOCAL, 1, CHARANUM
		SIF TARGET:LOCAL < 1
			BREAK
		SIF TARGET:LOCAL == TARGET
			CONTINUE
		SIF CFLAG:LOCAL:睡眠 > 0
			CONTINUE
		IF CFLAG:LOCAL:うふふ == 0
			候補配列:(LOCAL:1) = TARGET:LOCAL
			LOCAL:1 ++
		ENDIF
	NEXT
	IF LOCAL:1
		RFLAG:コマンド結果受渡し変数２ = 候補配列:(RAND:(LOCAL:1))
		RCVAR:TARGET:露出コマンドフラグ = 1
	ENDIF
ENDIF

TIME += 5
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE333
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(333)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;道具どれか装着している時のみ
IF MODE_確認_完全一致("クリキャップ", PLAYER, TARGET) > -1
ELSEIF MODE_確認_完全一致("オナホール", PLAYER, TARGET) > -1
ELSEIF MODE_確認_完全一致("バイブ", PLAYER, TARGET) > -1
ELSEIF MODE_確認_完全一致("アナルバイブ", PLAYER, TARGET) > -1
ELSEIF MODE_確認_完全一致("ニプルキャップ", PLAYER, TARGET) > -1
ELSE
	RETURN 0
ENDIF
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM333

IF RFLAG:コマンド結果受渡し変数２
	PRINTFORML %CALLNAME:TARGET%は%CALLNAME:(RFLAG:コマンド結果受渡し変数２)%と会話している…
ENDIF

PRINTFORM %CALLNAME:MASTER%は
LOCAL = 0
IF GETBIT(RFLAG:コマンド結果受渡し変数, 0)
	LOCALS = クリキャップ
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 1)
	LOCALS = オナホール
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 2)
	LOCALS = バイブ
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 3)
	LOCALS = アナルバイブ
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 4)
	LOCALS = ニプルキャップ
	LOCAL ++
ENDIF
SIF LOCAL > 1
	LOCALS = 道具類
PRINTFORML %CALLNAME:TARGET%が装着した%LOCALS%を強くしたり弱くしたりして、反応を楽しんだ

