		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "道具系"
		IF TFLAG:調教モード != 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "単独可能"
		IF TFLAG:調教モード > 1
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "特殊プレイ"
		IF TFLAG:調教モード != 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:2 <= 0 || 睡眠フラグ == 1 || CFLAG:隠密 || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "飲み会"
		IF TFLAG:調教モード != 3
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "触手系"
		;うふふのみ
		IF TFLAG:調教モード != 2
			RESULT = 0
			RETURNF 1
		ENDIF
		;相手必須
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		;触手技能必須
		IF !あなた特殊能力:触手変化術
			RESULT = 0
			RETURNF 1
		ENDIF
		;触手性癖必須
		IF 性癖素質:TARGET:触手プレイ < 1
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "いつでも"
	ENDSELECT
ENDIF





