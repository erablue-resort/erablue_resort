		IF TFLAG:調教モード != 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
