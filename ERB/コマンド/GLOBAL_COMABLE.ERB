	LOCALS = %COMTYPE_S(TFLAG:コマンドタイプ受渡)%
ENDIF
VARSET 分割文字列
;&や_が入ってるとAND条件やOR条件になる
STRFIND LOCALS, "&"
IF RESULT > -1
	SPLIT LOCALS, "&", 分割文字列
	LOCAL:1 = RESULT
	FOR LOCAL, 0, LOCAL:1
		IF GLOBAL_COMABLE_TYPE(分割文字列:LOCAL)
			;AND条件なので一個でも不許可（1が返ってくる）なら通さない
			RESULT = 0
			RETURNF 1
		ENDIF
	NEXT
	;FORを抜けた＝全部許可だったはずなので通す
	RESULT = 0
	RETURNF 0
ENDIF

STRFIND LOCALS, "_"
IF RESULT > -1
	SPLIT LOCALS, "_", 分割文字列
	LOCAL:1 = RESULT
	FOR LOCAL, 0, LOCAL:1
		IF GLOBAL_COMABLE_TYPE(分割文字列:LOCAL) == 0
			;OR条件なので一個でも許可（0が返ってくる）なら通す
			RESULT = 0
			RETURNF 0
		ENDIF
	NEXT
	;FORを抜けた＝全部不許可だったはずなので通さない
	RESULT = 0
	RETURNF 1
ENDIF

LOCAL = GLOBAL_COMABLE_TYPE(LOCALS)
RESULT = 0

RETURNF LOCAL


@GLOBAL_COMABLE_TYPE(ARGS)
#FUNCTION
#DIM 睡眠フラグ
LOCALS = %ARGS%

睡眠フラグ = CFLAG:睡眠
SIF 睡眠中許可
	睡眠フラグ = 2

IF LOCALS == "隠密"
;隠密行動は隠密時のみ
	IF !CFLAG:MASTER:隠密
		RESULT = 0
		RETURNF 1
	ENDIF
ELSEIF LOCALS == "被挿入中"
;被挿入中コマンドは被挿入中のみ
	IF !MODE_存在判定_ターゲット側("ＶＡ挿入系", PLAYER)
		RESULT = 0
		RETURNF 1
	ENDIF
ELSE
	;隠密時は相手も隠密じゃないとダメ
	IF CFLAG:PLAYER:隠密 && (!TARGET:1 || !CFLAG:TARGET:隠密)
		RESULT = 0
		RETURNF 1
	ENDIF
	;被挿入中は基本全部アウト
	IF MODE_存在判定_ターゲット側("ＶＡ挿入系", PLAYER)
		RESULT = 0
		RETURNF 1
	ENDIF
	;ハーヴィンオナホ時は相手が必要なやつは消す
	IF MODE_存在判定_ターゲット側("ハーヴィンオナホ系", TARGET) && LOCALS != "いつでも" && LOCALS != "単独可能"
		RESULT = 0
		RETURNF 1
	ENDIF
	SELECTCASE LOCALS
;各コマンドのカテゴリで分ける
;コマンド番号気にしなくてもあとから無秩序に追加できるように
	CASE "日常"
		IF TFLAG:調教モード != 1
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		IF MODE_存在判定_ターゲット側("全裸散歩", TARGET)
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "セクハラ弱"
		IF TFLAG:調教モード == 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TCVAR:MASTER:馴れ合い強度 < 1 && 知識素質:TARGET:性知識 > -1 && !CFLAG:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
		IF (TARGET:1 <= 0 && 飲み会TARGET:1 <= 0) || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		;他人とデート中かつ寝てない時はダメ
		IF CFLAG:TARGET:デート && CFLAG:TARGET:デート != MASTER + 100 && TCVAR:TARGET:デートちょっかい値 <= 0 && !CFLAG:TARGET:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "セクハラ"
		IF TFLAG:調教モード == 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TCVAR:MASTER:馴れ合い強度 < 1 && 知識素質:TARGET:性知識 > -1 && !CFLAG:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
		IF (TARGET:1 <= 0 && 飲み会TARGET:1 <= 0) || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		;他人とデート中かつ寝てない時はダメ
		IF CFLAG:TARGET:デート && CFLAG:TARGET:デート != MASTER + 100 && TCVAR:TARGET:デートちょっかい値 <= 0 && !CFLAG:TARGET:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "セクハラ強"
		IF TFLAG:調教モード == 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TCVAR:MASTER:馴れ合い強度 < 2 && 知識素質:TARGET:性知識 > -1 && !CFLAG:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
		IF !GETBIT(CFLAG:TARGET:1 , 0)
			RESULT = 0
			RETURNF 1
		ENDIF
		IF (TARGET:1 <= 0 && 飲み会TARGET:1 <= 0) || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		;他人とデート中かつ寝てない時はダメ
		IF CFLAG:TARGET:デート && CFLAG:TARGET:デート != MASTER + 100 && TCVAR:TARGET:デートちょっかい値 <= 0 && !CFLAG:TARGET:睡眠
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "探索"
		IF TFLAG:調教モード > 1
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
		IF MODE_存在判定_ターゲット側("全裸散歩", TARGET)
			RESULT = 0
			RETURNF 1
		ENDIF
		IF MODE_存在判定_プレイヤー側("全裸散歩", PLAYER)
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE "うふふ"
		IF TFLAG:調教モード != 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TARGET:1 <= 0 || 睡眠フラグ == 1 || (CFLAG:隠密 && !CFLAG:PLAYER:隠密) || CFLAG:体力限界 == 1
			RESULT = 0
			RETURNF 1
		ENDIF
