		IF !(MODE_存在判定_ターゲット側("Ｖ挿入系", 対象キャラ) && MODE_存在判定_ターゲット側("Ａ挿入系", 対象キャラ) || MODE_存在判定_プレイヤー側("ＶＡ挿入系", 対象キャラ)) && !MODE_存在判定_ターゲット側("ＶＡ挿入系", 実行キャラ)
			IF RESULT == 2
				スワップあり = 0
				IF 実行キャラ == TARGET
					SWAP PLAYER, TARGET
					スワップあり = 1
				ENDIF
				;IF GROUPMATCH(LOCALS, "後背位", "寝バック", "側位", "屈曲位")
				IF GROUPMATCH(LOCALS, "後背位", "寝バック", "側位", "屈曲位", "同時挿入")
					CALL COM_ABLE60_0
					SIF RESULT
						LOCALS '= "正常位"
				;ELSEIF GROUPMATCH(LOCALS, "Ａ後背位", "Ａ寝バック", "Ａ側位", "Ａ屈曲位")
				ELSEIF GROUPMATCH(LOCALS, "Ａ後背位", "Ａ寝バック", "Ａ側位", "Ａ屈曲位", "Ａ同時挿入")
					CALL COM_ABLE62_0
