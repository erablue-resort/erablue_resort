							LOCALS '= "Ａ駅弁"
					ELSE
						CALL COM_ABLE60_8
						SIF RESULT
							LOCALS '= "駅弁"
					ENDIF
				ENDIF
				SIF LOCALS:1 != LOCALS
					CALL MODE_CHANGE(LOCALS, 実行キャラ, 対象キャラ)
				SIF スワップあり
					SWAP PLAYER, TARGET
			ENDIF
		ENDIF
	ENDIF
