	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(101)
	RETURN RESULT
;すでにあると禁止
SIF MODE_確認_ターゲット側("触手ペニス責め", TARGET) > -1 || MODE_確認_ターゲット側("触手クリ責め", TARGET) > -1
	RETURN 0
;クリがない場合駄目
SIF TALENT:TARGET:Ｃ感度 == -2
	RETURN 0
;前張りだと不可
SIF TEQUIP:下半身下着あり == 2
	RETURN 0
;将来的には許可する予定だけど（ユリウスとか）一旦あなた以外は封印
SIF PLAYER != MASTER
	RETURN 0

RETURN 1

