@MODE_持続快楽_Ｖ愛撫(実行キャラ番号, 対象キャラ番号)
#DIM 実行キャラ番号
#DIM 対象キャラ番号
#DIM 快楽基礎値
#DIM 詳細設定補正

CALL SOURCE_CALC_快Ｖ(対象キャラ番号, -1, 100)
SIF TALENT:実行キャラ番号:器用な指
	CALL SOURCE_CALC_快Ｖ(対象キャラ番号, -1, 50)

RETURN 1

@MODETYPE_Ｖ愛撫(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;ここは来ないはず
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = 指で%TEXTR("おまんこ/雌穴/膣口")%を%TEXTR("いじ/ほじ")%%TEXTR("られる/られ、快楽を貪る")%
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
SELECTCASE 部位番号
	CASE 部位_膣
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_占有
	CASE 部位_指
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_占有
ENDSELECT


@MODE_絶頂相手_Ｖ愛撫(絶頂部位, 処理モード, 判定結果)
#FUNCTION
#DIM 絶頂部位
#DIMS 処理モード
#DIM REF 判定結果

IF 処理モード == "ターゲット"
	IF 絶頂部位 == 部位_Ｖ
		判定結果 = 絶頂相手_モード相手
		RETURNF 絶頂相手_モード相手
	ENDIF
ENDIF

