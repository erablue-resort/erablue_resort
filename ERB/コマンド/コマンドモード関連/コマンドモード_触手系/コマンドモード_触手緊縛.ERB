CALL SOURCE_CALC_接触(対象キャラ番号, 実行キャラ番号, 快楽基礎値 * 20)
CALL SOURCE_CALC_接触(実行キャラ番号, 対象キャラ番号, 快楽基礎値 * 20)
詳細設定補正 = RESULT
EXP:実行キャラ番号:触手操作経験 ++

RETURN 1


@MODETYPE_触手緊縛(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;ここは来ないはず
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = 触手で全身を拘束されている
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;触手のためプレイヤー側は一切場所を専有しない
;動けないため手が使えない
SELECTCASE 部位番号
	CASE 部位_指
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_強占有
ENDSELECT


@MODE_絶頂相手_触手緊縛(絶頂部位, 処理モード, 判定結果)
#FUNCTION
#DIM 絶頂部位
#DIMS 処理モード
#DIM REF 判定結果

IF 処理モード == "ターゲット"
	IF 絶頂部位 == 部位_Ｓ
		判定結果 = 絶頂相手_モード相手
		RETURNF 絶頂相手_モード相手
	ENDIF
ENDIF


