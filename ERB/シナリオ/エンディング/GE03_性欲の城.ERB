		RETURN 1
	CASE "実行条件"
		;リストから実行するための条件
		;満たしてない間は実行ボタンが灰色で表示され、クリック不可
		SIF FLAG:ZP所持量 < 5000
			RETURN 0
		SIF あなたセフレ人数() < 100
			RETURN 0
		RETURN 1
	CASE "実処理"
		SIF !FLAG:クリア済み視聴フラグ
			FLAG:ZP所持量 -= 5000

		;文章部分はここに記載するよりも別関数に分ける方が見やすいし書きやすいので推奨
		CALL エンディングイベント_シナリオ_性欲の城()
		RETURN RESULT
ENDSELECT

