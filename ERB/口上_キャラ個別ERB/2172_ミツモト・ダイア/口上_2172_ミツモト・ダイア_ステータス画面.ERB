	SELECTCASE 現在仕事:対象キャラ:1
		CASE 2
			;ロビーで受付中
			STRDATA KSTR:(K++)
				DATA 「お勤めご苦労さまです、ロビーでの仕事は_1st_にお任せあれ」
				DATA 「親切丁寧真心こめて対応せねば」
			ENDDATA
		CASE 503
			;バーエリアでバーテンダー中
			STRDATA KSTR:(K++)
				DATA 「本日も_1st_特製カクテルでも構わないが？」
				DATA 「おススメカクテルは遠慮なく言うが良い」
			ENDDATA
		CASE 506
			;図書室で司書中
			STRDATA KSTR:(K++)
				DATA 「よく来た。あと――本は大事に取り扱う事」
				DATA 「様々な書籍を取り揃えているな。管理も_2nd_だけでは大変だろう…」
			ENDDATA
		CASE 1503, 15
			;プールで監視員中
			STRDATA KSTR:(K++)
				DATA 「_1st_アイはすべてを見通す…」
				DATA 「不埒者と水難者を出すわけにはいかないからな」
			ENDDATA
		CASE IS > 10000
			;各種店舗で店番中
			CALLFORMF 空艇港店舗名表示_{空艇港店舗状況:(現在仕事:対象キャラ:1 - 10000):0}(現在仕事:対象キャラ:1 - 10000)
			SELECTCASE REPLACE(TSTR:場所名受渡, "『.*』", "")
				CASE "道具屋"
					KSTR:(K++) = 「ここでは_1st_も知らない、珍しい道具を揃えてある。好きなだけ見ていくと良い」
				CASE "土産物屋"
					KSTR:(K++) = 「土産物は観光の華だ、特産品も用意しているぞ」
				CASE "食事処"
					KSTR:(K++) = 「えっほ、えっほ…レストランより多忙だな」
				CASE "装飾品店"
					KSTR:(K++) = 「効果とデザイン、どれも一級品揃いだ。ゆっくり選んでくれ」
			ENDSELECT
	ENDSELECT
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置
;状況で分岐

IF CFLAG:対象キャラ:飲み会
	;飲み会中
	KSTR:(K++) = 
ELSEIF CFLAG:対象キャラ:睡眠
	;睡眠中
	KSTR:(K++) = 
ELSEIF CFLAG:対象キャラ:デート
	;デート中
	;デートの相手のキャラ番号 + 100が入っている
	;あなた相手なら「CFLAG:対象キャラ:デート == MASTER + 100」
	KSTR:(K++) = 「_1st_とのイチャラブタイム、胸が躍るな」
ELSEIF CFLAG:対象キャラ:一緒に遊ぶ
	;一緒に遊ぶ中
	KSTR:(K++) = 「_1st_もまぜてまぜてーなのだ」
ELSEIF CFLAG:対象キャラ:同行
	;同行中
	SELECTCASE CFLAG:PLAYER:現在位置
		;マッサージ室
		CASE 11
			KSTR:(K++) = 「ん…気持ち良すぎてクラクラしそうだ……」
		CASEELSE
			KSTR:(K++) = 「ふふん、_2nd_も物好きだな。デートのつもりか？」
	ENDSELECT
ELSEIF CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;一緒に隠密中
	KSTR:(K++) = 
ELSEIF CFLAG:PLAYER:隠密 && !CFLAG:対象キャラ:隠密
	;あなたが隠れていて、キャラはあなたに気づいていない
	KSTR:(K++) = 
ELSEIF !CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;キャラの野外オナニー中
	STRDATA KSTR:(K++)
		DATA ダイアは豊満な胸を自ら揉みしだき、スカートの中でクリトリスを弄っている…
		DATA _主人_の前で自ら膣に指を抜き差ししながら自慰に耽っている。陰部からは充満した雌の匂いに_主人_の理性が揺らぐ…
	ENDDATA
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置

;最も多い好感度要素で分岐
;簡易版なのでステータス画面のコメントを利用。細かく決めたい場合は後で編集してください
SELECTCASE MAXRAND(CFLAG:対象キャラ:友情度, CFLAG:対象キャラ:信頼度, CFLAG:対象キャラ:恋心度, CFLAG:対象キャラ:性愛度)
	CASE 0
		;友情度
		CALL 口上_ステータス画面_友情コメント_2172(対象キャラ, 1)
	CASE 1
		;信頼度
		CALL 口上_ステータス画面_信頼コメント_2172(対象キャラ, 1)
	CASE 2
		;恋心度
		CALL 口上_ステータス画面_恋心コメント_2172(対象キャラ, 1)
	CASE 3
		;性愛度
		CALL 口上_ステータス画面_性愛コメント_2172(対象キャラ, 1)
ENDSELECT

IF K > 1
	KSTR:0 '= KSTR:0 + KSTR:1
	KSTR:1 '= ""
ENDIF

$表示位置
CALL PRINT_STATEコメント表示(対象キャラ, 2)


