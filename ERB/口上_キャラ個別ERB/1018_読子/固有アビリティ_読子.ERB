;防御
@固有アビ_1018_1(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名

IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
    アビ名 = 紙の壁＋
    消費ＭＰ = 50
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
    アビ名 = 紙の壁
    消費ＭＰ = 25
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10 || CFLAG:キャラ番号:人物番号 % 2 == 0
    アビ名 = 人型ポップおとり
    消費ＭＰ = 10
ELSEIF CFLAG:キャラ番号:人物番号 % 2 == 1
    アビ名 = 
ENDIF

SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"

		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙の壁で敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>3ターンの間敵攻撃ダメージ無効"
		ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙の壁で敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>1ターンの間敵攻撃ダメージ無効"
		ELSE
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>1回だけ人型ポップおとりで敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>1回だけ敵の攻撃ダメージ無効"
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ効果"
		IF アビ名 == "紙の壁＋"
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 250
			CALL アビテンプレート_有利効果_バフ効果セット
		ELSEIF アビ名 == "紙の壁＋＋"
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 500
			CALL アビテンプレート_有利効果_バフ効果セット
		ELSE
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 100
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

;攻撃
@固有アビ_1018_2(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名

IF 基礎BATTLE_STATE:キャラ番号:Lv >= 20
    アビ名 = 紙ばら撒き＋
    消費ＭＰ = 30
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10 || CFLAG:キャラ番号:人物番号 % 2 == 1
    アビ名 = 紙ばら撒き
    消費ＭＰ = 10
ELSEIF CFLAG:キャラ番号:人物番号 % 2 == 0
    アビ名 = 
ENDIF


SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙を飛ばして敵を攻撃する。
		詳細文文字列受け渡し変数 += @"<br>風属性の全体攻撃"
	CASE "アビ効果"
	IF アビ名 == "紙ばら撒き＋"
		アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 250
	ELSE
		アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 125
	ENDIF
	CALL アビテンプレート_ダメージ処理_風属性
ENDSELECT

;自己回復
@固有アビ_1018_3(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名

IF 基礎BATTLE_STATE:キャラ番号:Lv >= 17
    アビ名 = 本を読む＋
    消費ＭＰ = 25
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 5
    アビ名 = 本を読む
    消費ＭＰ = 10
ELSE
    アビ名 = 
    消費ＭＰ = 10
ENDIF

SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"

		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 17
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>読子さんが本を読んで回復＋バッドステータス解除。
			詳細文文字列受け渡し変数 += @"<br>ＨＰ回復＋バッドステータス解除"
		ELSE
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>読子さんが本を読んで回復。
			詳細文文字列受け渡し変数 += @"<br>ＨＰ回復"
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_自己のみ
	IF アビ名 == "本を読む＋"
		アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 500
		CALL アビテンプレート_回復処理_MAXでも回復
		CALL アビ汎用変数文字列リセット
		CALL アビテンプレート_有利効果_デバフ消去
	ELSE
		CALL アビ対象選択テンプレート_味方単体_生者のみ
		アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 250
		CALL アビテンプレート_回復処理_MAXでも回復
	ENDIF
ENDSELECT
