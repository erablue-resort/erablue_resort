		SIF LOCAL:14
			LOCALS += "咲夜、"
		SIF LOCAL:15
			LOCALS += "美鈴、"
		SIF LOCAL:14
			LOCALS += "小悪魔、"
		LOCALS += "%LOCALS%息を合わせて……！"

		IF LOCAL:12
			NSTR:(K++) = ++++
			切り替え名前:(LOCAL:1) = %CALLNAME:(PTレミリア)%
			切り替え顔グラリソース:(LOCAL:1) = 探索用_{キャラ隊列検索(PTレミリア)}_顔
			KSTR:(K++) = 「ええ、パチェ！」
			LOCAL:1 ++
		ENDIF
		IF LOCAL:13
			NSTR:(K++) = ++++
			切り替え名前:(LOCAL:1) = %CALLNAME:(PTフラン)%
			切り替え顔グラリソース:(LOCAL:1) = 探索用_{キャラ隊列検索(PTフラン)}_顔
			KSTR:(K++) = 「はぁい、コンティニューはさせないわ！」
			LOCAL:1 ++
		ENDIF
		IF LOCAL:14
