IF CSTR:LOCAL:スタイル管理文字列 != ""
	CSTR:LOCAL:スタイル管理文字列 = 
	CALL スタイル変更_3072(LOCAL, "変更後処理")
ELSEIF CSTR:LOCAL:スタイル管理文字列 == ""

	CSTR:LOCAL:スタイル管理文字列 = [傾国の悪女]美獣


	CALL スタイル変更_3072(LOCAL, "変更後処理")
ENDIF

