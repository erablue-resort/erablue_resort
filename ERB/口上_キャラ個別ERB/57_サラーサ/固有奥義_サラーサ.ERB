			ENDIF
		ELSE
			IF LOCAL == 0
				詳細文文字列受け渡し変数 = <br>敵単体に{奥義威力}％のダメージを与える/フォームチェンジ【剣】
			ELSE
				詳細文文字列受け渡し変数 = <br>敵単体に{奥義威力}％のダメージを与える/333ダメ―ジを与える/フォームチェンジ【斧】
			ENDIF
		ENDIF
		RETURN 奥義威力
	CASE "奥義前効果"
	
	
		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
			IF LOCAL == 0
				CALL アビ対象選択テンプレート_自己のみ
				アビ汎用文字列:バフ・デバフ枠 = 最終斧奥義バフ
				アビ汎用文字列:バフ・デバフ対象能力 = 攻撃力
				アビ汎用変数:効果割合 = 20
				アビ汎用変数:持続ターン = 3
				CALL アビテンプレート_有利効果_バフ効果セット
			ENDIF
		ENDIF


	CASE "奥義追加効果"
		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 50
			IF LOCAL == 0
				CALL アビテンプレート_不利効果_バフ消去()
			ELSE
				アビ汎用変数:命中率補正値 = 100
				アビ汎用変数:効果量 = 333
				CALL アビテンプレート_ダメージ処理_自属性
				CALL アビテンプレート_ダメージ処理_自属性
				CALL アビテンプレート_ダメージ処理_自属性
				
			ENDIF
		ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
			IF LOCAL == 0
				
			ELSE
				アビ汎用変数:命中率補正値 = 100
				アビ汎用変数:効果量 = 333
				CALL アビテンプレート_ダメージ処理_自属性
				CALL アビテンプレート_ダメージ処理_自属性
			ENDIF
		ELSE
			IF LOCAL == 0
				
			ELSE
				アビ汎用変数:命中率補正値 = 100
				アビ汎用変数:効果量 = 333
				CALL アビテンプレート_ダメージ処理_自属性
			ENDIF
		ENDIF
		
		
		
		
		;切り替え
		戦闘中カウント:隊列:0 = !戦闘中カウント:隊列:0

ENDSELECT
