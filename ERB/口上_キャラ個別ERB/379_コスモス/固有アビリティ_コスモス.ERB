	アビ名 = ブラストイレース＋＋
	威力 = 500
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 20
	アビ名 = ブラストイレース＋
	威力 = 450
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 4
