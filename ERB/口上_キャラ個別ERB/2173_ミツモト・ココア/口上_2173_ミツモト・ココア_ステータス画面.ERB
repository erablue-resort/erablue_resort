;仕事中の一言口上
IF TALENT:対象キャラ:従業員 && TCVAR:対象キャラ:休暇中 == 0 && CFLAG:対象キャラ:現在位置 == 現在仕事:対象キャラ:1 % 10000 && CFLAG:対象キャラ:現在マップ種別 == 現在仕事:対象キャラ:1 / 10000
	SELECTCASE 現在仕事:対象キャラ:1
		CASE 2
			;ロビーで受付中
			KSTR:(K++) = 「現場実習にはまだ早いけど、トコトン働きます！」
		CASE 503
			;バーエリアでバーテンダー中
			KSTR:(K++) = 
		CASE 506
			;図書室で司書中
			KSTR:(K++) = 「本は大事な財産なのです」
		CASE 1503, 15
			;プールで監視員中
			KSTR:(K++) = 「ちっちゃな私でも大丈夫かなぁ…はみゅう…」
		CASE IS > 10000
			;各種店舗で店番中
			CALLFORMF 空艇港店舗名表示_{空艇港店舗状況:(現在仕事:対象キャラ:1 - 10000):0}(現在仕事:対象キャラ:1 - 10000)
			SELECTCASE REPLACE(TSTR:場所名受渡, "『.*』", "")
				CASE "道具屋"
					KSTR:(K++) = 「いらっしゃいませ！」
				CASE "土産物屋"
					KSTR:(K++) = 「素敵なお土産、たくさんありますよ！」
				CASE "食事処"
					KSTR:(K++) = 「旅の途中で、小腹が空きませんか？」
				CASE "装飾品店"
					KSTR:(K++) = 「綺麗な装飾品揃いです。_主人_さんもどうですか？」
			ENDSELECT
	ENDSELECT
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置
;状況で分岐

IF CFLAG:対象キャラ:飲み会
	;飲み会中
	KSTR:(K++) = 「ココアはお酒飲めないけど、雰囲気が楽しそうです。皆さん盛り上がってますか？」
ELSEIF CFLAG:対象キャラ:睡眠
	;睡眠中
	KSTR:(K++) = 「すぅ…すぅ……」
ELSEIF CFLAG:対象キャラ:デート
	;デート中
	;デートの相手のキャラ番号 + 100が入っている
	;あなた相手なら「CFLAG:対象キャラ:デート == MASTER + 100」
	KSTR:(K++) = 
ELSEIF CFLAG:対象キャラ:一緒に遊ぶ
	;一緒に遊ぶ中
	KSTR:(K++) = （_主人_さんと遊べて嬉しい！お誘い大成功～）
ELSEIF CFLAG:対象キャラ:同行
	;同行中
	SELECTCASE CFLAG:PLAYER:現在位置
		;マッサージ室
		CASE 11
			KSTR:(K++) = 「とっても、気持ち良かったぁ…」
		CASEELSE
			KSTR:(K++) = （_主人_さんと一緒におでかけ、おでかけ…うふふ）
	ENDSELECT
ELSEIF CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;一緒に隠密中
	KSTR:(K++) = 
ELSEIF CFLAG:PLAYER:隠密 && !CFLAG:対象キャラ:隠密
	;あなたが隠れていて、キャラはあなたに気づいていない
	KSTR:(K++) = 
ELSEIF !CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;キャラの野外オナニー中
	KSTR:(K++) = 
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置

;最も多い好感度要素で分岐
;簡易版なのでステータス画面のコメントを利用。細かく決めたい場合は後で編集してください
SELECTCASE MAXRAND(CFLAG:対象キャラ:友情度, CFLAG:対象キャラ:信頼度, CFLAG:対象キャラ:恋心度, CFLAG:対象キャラ:性愛度)
	CASE 0
		;友情度
		CALL 口上_ステータス画面_友情コメント_2173(対象キャラ, 1)
	CASE 1
		;信頼度
		CALL 口上_ステータス画面_信頼コメント_2173(対象キャラ, 1)
	CASE 2
		;恋心度
		CALL 口上_ステータス画面_恋心コメント_2173(対象キャラ, 1)
	CASE 3
		;性愛度
		CALL 口上_ステータス画面_性愛コメント_2173(対象キャラ, 1)
ENDSELECT

IF K > 1
	KSTR:0 '= KSTR:0 + KSTR:1
	KSTR:1 '= ""
ENDIF

$表示位置
CALL PRINT_STATEコメント表示(対象キャラ, 2)


