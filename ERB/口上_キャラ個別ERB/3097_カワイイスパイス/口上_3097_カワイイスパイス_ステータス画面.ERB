		CASE 503
			;バーエリアでバーテンダー中
			KSTR:(K++) = 
		CASE 506
			;図書室で司書中
			KSTR:(K++) = 
		CASE 1503, 15
			;プールで監視員中
			KSTR:(K++) = 
		CASE IS > 10000
			;各種店舗で店番中
			CALLFORMF 空艇港店舗名表示_{空艇港店舗状況:(現在仕事:対象キャラ:1 - 10000):0}(現在仕事:対象キャラ:1 - 10000)
			SELECTCASE REPLACE(TSTR:場所名受渡, "『.*』", "")
				CASE "道具屋"
					KSTR:(K++) = 
