					KSTR:(K++) = 
				CASE "食事処"
					KSTR:(K++) = 
				CASE "装飾品店"
					KSTR:(K++) = 
			ENDSELECT
	ENDSELECT
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置
;状況で分岐

IF CFLAG:対象キャラ:飲み会
	;飲み会中
	KSTR:(K++) = 
ELSEIF CFLAG:対象キャラ:睡眠
	;睡眠中
	KSTR:(K++) = 
