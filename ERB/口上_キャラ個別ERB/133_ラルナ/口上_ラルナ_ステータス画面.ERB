@口上_INFO画面_一言コメント_133(対象キャラ)
#DIM 対象キャラ
CALL 口上変数初期化

;口上と同じ感覚で使う為に書式を統一しているが、通常時の画面で表示されるので
;基本的にWAIT系列は使わないことを推奨
;また、一行のみの表示を想定。二行以上は基本的に禁止
;※うふふ中には表示されません

;以下は分岐の例
;仕事中の一言口上
IF TALENT:対象キャラ:従業員 && TCVAR:対象キャラ:休暇中 == 0 && CFLAG:対象キャラ:現在位置 == 現在仕事:対象キャラ:1 % 10000 && CFLAG:対象キャラ:現在マップ種別 == 現在仕事:対象キャラ:1 / 10000
	SELECTCASE 現在仕事:対象キャラ:1
		CASE 2
			;ロビーで受付中
			KSTR:(K++) = 「ようこそリゾート地へ」
		CASE 503
			;バーエリアでバーテンダー中
			KSTR:(K++) = 「も～、飲み過ぎちゃ駄目よ？」
		CASE 506
			;図書室で司書中
			KSTR:(K++) = 「図書室ではお静かに～」
		CASE 1503, 15
			;プールで監視員中
			KSTR:(K++) = 「そこ！飛び込まない！」
		CASE IS > 10000
			;各種店舗で店番中
			CALLFORMF 空艇港店舗名表示_{空艇港店舗状況:(現在仕事:対象キャラ:1 - 10000):0}
			SELECTCASE TSTR:場所名受渡
				CASE "道具屋"
					KSTR:(K++) = 「これはここに置いて……これはこっち……」
				CASE "土産物屋"
					KSTR:(K++) = 「どうして木刀は売れないのかな……」
				CASE "食事処"
					KSTR:(K++) = 「少々お待ちを！」
					KSTR:(K++) = ラルナの料理は大変人気があり、大量の行列ができている。
				CASE "装飾品店"
					KSTR:(K++) = 「わぁ……キラキラしてて綺麗ね♪」
			ENDSELECT
	ENDSELECT
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置
;状況で分岐

IF CFLAG:対象キャラ:飲み会
	;飲み会中
	KSTR:(K++) = 「えへへ……乾杯しましょ♪」
ELSEIF CFLAG:対象キャラ:睡眠
	;睡眠中
	KSTR:(K++) = 「%CALLNAME:MASTER%さん……すぅ……すぅ……」
ELSEIF CFLAG:対象キャラ:デート
	;デート中
	KSTR:(K++) = 「%CALLNAME:MASTER%さん……_H_」
ELSEIF CFLAG:対象キャラ:一緒に遊ぶ
	;一緒に遊ぶ中
	KSTR:(K++) = 「楽しいわね」
ELSEIF CFLAG:対象キャラ:同行
	;同行中
	KSTR:(K++) = 「あら、どこに連れて行ってくれるのかな？」
ELSEIF CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;一緒に隠密中
	KSTR:(K++) = 「何だかドキドキするわね」
ELSEIF CFLAG:PLAYER:隠密 && !CFLAG:対象キャラ:隠密
	;あなたが隠れていて、キャラはあなたに気づいていない
	KSTR:(K++) = （_I_視線……？　殺意はない……_）
ELSEIF !CFLAG:PLAYER:隠密 && CFLAG:対象キャラ:隠密
	;キャラの野外オナニー中
	KSTR:(K++) = （こんな所で駄目なのに……_H_　手が止まらないっ_H_）
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置

;最も多い好感度要素で分岐
SELECTCASE MAXRAND(CFLAG:対象キャラ:友情度, CFLAG:対象キャラ:信頼度, CFLAG:対象キャラ:恋心度, CFLAG:対象キャラ:性愛度)
	CASE 0
		;友情度
		KSTR:(K++) = 「%CALLNAME:MASTER%とおしゃべりするの楽しいわ♪」
	CASE 1
		;信頼度
		KSTR:(K++) = （ナルメアを%CALLNAME:MASTER%さんに紹介するのもありかな……？）
	CASE 2
		;恋心度
		KSTR:(K++) = （私には夫がいるのに……どうして%CALLNAME:MASTER%の事ばかり……）
	CASE 3
		;性愛度
		KSTR:(K++) = （%CALLNAME:MASTER%さんを見るとが子宮がｷｭﾝｯって……_H_　本能で屈服してる_H_）
ENDSELECT

$表示位置
CALL コメント文頭処理(対象キャラ, 2)
CALL 口上変数表示(対象キャラ, 1)


