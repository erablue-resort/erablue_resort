;-------------------------------------------------
;時間経過
;-------------------------------------------------
@TRACHECK_TIME
SELECTCASE SAVESTR:ゲームフェイズ管理
	CASE "通常モード"
		IF TFLAG:オートコマンドフラグ > 0
			;オートコマンド時は時間経過しない
		ELSEIF RSTR:SELECTCOM_S受け渡し != ""
			;うふふ系の派生は5分刻み
			SPLIT RSTR:SELECTCOM_S受け渡し, "_", LOCALS
			IF ISNUMERIC(LOCALS) && TOINT(LOCALS) < 200
				TIME += 5
			ENDIF
		ELSEIF SELECTCOM < 200
			IF PLAYER >= 0 && TALENT:PLAYER:絶倫 && RAND:3 == 0
			ELSE
				;めんどくさいので5分刻み
				TIME += 5
			ENDIF
		ENDIF
	CASE "マッサージモード"
		;めんどくさいので5分刻み
		TIME += 5
ENDSELECT
