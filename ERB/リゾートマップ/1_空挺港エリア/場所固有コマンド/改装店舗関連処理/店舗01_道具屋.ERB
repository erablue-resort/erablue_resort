@空艇港店舗効果_1(ARGS)

SELECTCASE ARGS
	CASE "一日終了時のルピ収入"
		LOCAL = 滞在キャラ数算出関数() * 20 * RAND(95, 106) / 100
		RETURN LOCAL
	CASE "人気度上昇量の減衰ライン"
		;キャラ上限0.5人分の上昇
		RETURN 1000
ENDSELECT

RETURN 0

